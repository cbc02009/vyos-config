(common) {
  errors
  log error
  reload
  loadbalance
  cache
  loop
  local

  prometheus :9153

  health {
    lameduck 5s
  }
}

(k8s_gateway) {
  forward . 10.6.0.4:53
}

unifi {
  import common
  hosts /host/etc/hosts {
    ttl 1
    reload 5s
  }
}

# Hack to prevent the gatway returning 127.0.0.1 from /etc/hosts
gateway.ctec.run {
  import common
  template IN A gateway.ctec.run {
    answer "{{ .Name }} 60 IN A 10.0.0.1"
  }
}

kokoro.wtf {
  import common
  hosts /host/etc/hosts {
    ttl 1
    reload 5s
    fallthrough
  }
  import k8s_gateway
}

ctec.run {
  import common
  hosts /host/etc/hosts {
    ttl 1
    reload 5s
  }
}

0.10.in-addr.arpa {
  hosts /host/etc/hosts {
    ttl 1
    reload 5s
  }
}
